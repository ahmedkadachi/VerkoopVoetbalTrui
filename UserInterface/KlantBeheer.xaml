            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Klant ID" Binding="{Binding KlantId}" />
                <DataGridTextColumn Width="*" Header="Klant Naam" Binding="{Binding Naam}" />
                <DataGridTextColumn Width="*" Header="Klant Adres" Binding="{Binding Adres}" />
